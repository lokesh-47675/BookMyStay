<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login on BookMyStay</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>

            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input placeholder="Username" id="username" name="username" type="text" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div >


            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input placeholder="Password" id="password" name="password" type="text" class="form-control" required>
            </div >

            <button class="btn btn-dark add-btn ">Login</button>
        </form>
    </div>

</div>